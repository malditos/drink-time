html, body
  width 100%
  height 100%
  padding 0
  margin 0
  font-family Verdana, Arial, Helvetica, sans-serif

.main-container
  background-color #f2f2f2
  width 100%
  height 100%

// components

button.btn
  user-select none
  height 30px
  line-height 30px
  border-radius 3px
  background-color #0088cc
  color #fff
  border 0
  outline none
  box-shadow none
  padding 0 20px
  margin 20px
  box-sizing border-box
  cursor pointer
  &:active
    box-shadow inset rgba(0, 0, 0, 0.5) 0 0 5px
